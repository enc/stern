- content_for :title do
  = @post.title
-unless @post.description.blank?
  - content_for :meta do
    %meta{name: 'description', CONTENT: @post.description}
%p#notice= notice

.postbox
  .textbox
    .datebox
      %p.day
        = @post.created_at.mday
        = '.'
      %p.month
        = @post.created_at.strftime "%b %y"
    %h2
      = link_to post_path @post do
        = @post.title
    %p
      = @post.content
  - if @post.pic.exists?
    .imagebox
      = image_tag @post.pic.url
- if user_signed_in?
  = link_to 'Edit', edit_post_path(@post)
  \|
  = link_to 'Back', posts_path
